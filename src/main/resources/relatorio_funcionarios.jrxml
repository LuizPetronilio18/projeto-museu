                </textField>
                <textField pattern="¤ #,##0.00">
                    <reportElement style="ColumnHeader" x="455" y="0" width="100" height="20" uuid="a1c2b8e3-0b1a-4b9e-9b0e-3e2c1d0a9f8b"/>
                    <textElement textAlignment="Right" verticalAlignment="Middle"/>
