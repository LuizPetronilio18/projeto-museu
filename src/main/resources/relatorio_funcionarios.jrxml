    <parameter name="DADOS_GRAFICO_FUNCIONARIOS" class="net.sf.jasperreports.engine.JRDataSource"/>

    <queryString>
        <![CDATA[
            SELECT f.nome AS nome_funcionario, f.cpf, c.nomeCargo, c.salario
            FROM funcionarios f
            INNER JOIN cargo c ON f.cargo_codCargo = c.codCargo
            ORDER BY c.nomeCargo, f.nome
        ]]>
    </queryString>
    <field name="nome_funcionario" class="java.lang.String"/>
    <field name="cpf" class="java.lang.String"/>
    <field name="nomeCargo" class="java.lang.String"/>
    <field name="salario" class="java.lang.Double"/>

    <variable name="CUSTO_POR_CARGO" class="java.lang.Double" resetType="Group" resetGroup="CargoGroup" calculation="Sum">
        <variableExpression><![CDATA[$F{salario}]]></variableExpression>
    </variable>
    <variable name="TOTAL_FUNCIONARIOS_GERAL" class="java.lang.Integer" calculation="Count">
        <variableExpression><![CDATA[$F{cpf}]]></variableExpression>
    </variable>

    <group name="CargoGroup">
