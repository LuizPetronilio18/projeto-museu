    <subDataset name="dataset_visitantes" uuid="fba8340c-1b32-4e23-912b-3e5f22c67623">
        <field name="NOME_VISITANTE" class="java.lang.String"/>
        <field name="TOTAL_GASTO" class="java.lang.Double"/>
    </subDataset>

    <parameter name="DADOS_GRAFICO_VISITANTES" class="net.sf.jasperreports.engine.JRDataSource"/>

    <queryString>
        <![CDATA[
            SELECT
                vs.nome, vs.emailVisitante, vs.cpf,
                COUNT(v.codVisita) AS total_visitas,
                COALESCE(SUM(i.preco), 0) AS total_gasto
            FROM visitantes vs
            LEFT JOIN visitas v ON vs.codVisitante = v.Visitantes_codVisitante
            LEFT JOIN ingressos i ON v.codVisita = i.Visitas_codVisita
            GROUP BY vs.codVisitante, vs.nome, vs.emailVisitante, vs.cpf
            ORDER BY vs.nome
        ]]>
    </queryString>
    <field name="nome" class="java.lang.String"/>
    <field name="emailVisitante" class="java.lang.String"/>
    <field name="cpf" class="java.lang.String"/>
    <field name="total_visitas" class="java.lang.Long"/>
    <field name="total_gasto" class="java.lang.Double"/>

    <variable name="TOTAL_RECEITA_GERAL" class="java.lang.Double" calculation="Sum">
        <variableExpression><![CDATA[$F{total_gasto}]]></variableExpression>
    </variable>

