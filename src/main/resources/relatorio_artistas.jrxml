    <queryString>
        <![CDATA[
            SELECT
                a.codArtista, a.nomeArtista, a.nacionalidadae, COUNT(o.codObraarte) AS total_obras
            FROM artistas a
            LEFT JOIN obrasarte o ON a.codArtista = o.Artistas_codArtista
            GROUP BY a.codArtista, a.nomeArtista, a.nacionalidadae
            ORDER BY a.nomeArtista
        ]]>
    </queryString>
