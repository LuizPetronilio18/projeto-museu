    <parameter name="DADOS_GRAFICO_CARGOS" class="net.sf.jasperreports.engine.JRDataSource"/>

    <queryString>
        <![CDATA[
            SELECT
                c.codCargo, c.nomeCargo, c.turno, c.salario, COUNT(f.codFuncionario) AS total_funcionarios
            FROM cargo c
            LEFT JOIN funcionarios f ON c.codCargo = f.cargo_codCargo
            GROUP BY c.codCargo, c.nomeCargo, c.turno, c.salario
            ORDER BY c.nomeCargo
        ]]>
    </queryString>
    <field name="codCargo" class="java.lang.Integer"/>
    <field name="nomeCargo" class="java.lang.String"/>
    <field name="turno" class="java.lang.String"/>
    <field name="salario" class="java.lang.Double"/>
    <field name="total_funcionarios" class="java.lang.Long"/>

    <variable name="CUSTO_TOTAL_CARGO" class="java.lang.Double">
        <variableExpression><![CDATA[$F{salario} * $F{total_funcionarios}]]></variableExpression>
    </variable>
    <variable name="CUSTO_GERAL" class="java.lang.Double" calculation="Sum">
        <variableExpression><![CDATA[$V{CUSTO_TOTAL_CARGO}]]></variableExpression>
    </variable>
    <variable name="SALARIO_MEDIO_GERAL" class="java.lang.Double" calculation="Average">
        <variableExpression><![CDATA[$F{salario}]]></variableExpression>
    </variable>

