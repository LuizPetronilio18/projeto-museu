    <queryString>
        <![CDATA[
            SELECT
                m.nome, m.localizacao,
                (SELECT COALESCE(SUM(d.valorDoacao), 0) FROM doacoes d WHERE d.Museus_codMuseu = m.codMuseu) AS total_doacoes,
                (SELECT COALESCE(SUM(i.preco), 0) FROM ingressos i WHERE i.Museus_codMuseu = m.codMuseu) AS total_ingressos
            FROM museus m
            ORDER BY m.nome
        ]]>
    </queryString>
    <field name="nome" class="java.lang.String"/>
    <field name="localizacao" class="java.lang.String"/>
    <field name="total_doacoes" class="java.lang.Double"/>
    <field name="total_ingressos" class="java.lang.Double"/>

    <variable name="RECEITA_TOTAL_MUSEU" class="java.lang.Double">
